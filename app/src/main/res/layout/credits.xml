<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3277a8"
    tools:context=".Credits">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Imran Mamun"
        android:textColor="#3FEBE8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Ryan Loi"
        android:textSize="20sp"
        android:textColor="#3FEBE8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnEasyBack2"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF00FF"
        android:fontFamily="monospace"
        android:text="Back"
        android:textColor="#1d1e1f"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="136dp"
        android:layout_marginTop="104dp"
        android:text="Credits"
        android:textColor="#E4DA13"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="395dp"
        android:layout_height="79dp"
        android:textColor="#E60977"
        android:text="This project would not be possible without our group members: "
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="286dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:textColor="#3FEBE8"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Farhan Ahmed"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="191dp"
        android:textColor="#3FEBE8"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Aahish Pamulapati"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>